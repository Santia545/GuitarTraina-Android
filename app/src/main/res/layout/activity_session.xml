<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.session.SessionActivity">

    <TextView
        android:id="@+id/txtIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnJoinSession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crear_sesion"
        app:layout_constraintBottom_toTopOf="@id/btnShareTuning"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnJoinSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unirme_a_sesion"
        app:layout_constraintBottom_toTopOf="@id/btnShareAudio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btnShareTuning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compartir_10_afinacion"
        app:layout_constraintBottom_toTopOf="@id/btnShareMetronome"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateSession" />

    <Button
        android:id="@+id/btnShareAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compartir_audio"
        app:layout_constraintBottom_toTopOf="@id/btnExitSession"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/btnJoinSession" />
    <Button
        android:id="@+id/btnShareMetronome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compartir_10_metronomo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnShareTuning" />

    <Button
        android:id="@+id/btnExitSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salir_de_sesi_n"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/btnShareAudio" />
</androidx.constraintlayout.widget.ConstraintLayout>